{
	"$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
	"files": {
		"ignore": ["**/node_modules/**", "**/convex/_generated/**"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	}
}
